.btn-group{style: "float: right"}
  %button.btn.btn-default{type: "button"} Sort by Stargazers
  %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
    %span.caret
    %span.sr-only Toggle Dropdown
  %ul.dropdown-menu{role: "menu"}
    %li
      = link_to 'ASC', github_search_path(query: { text: params[:query][:text].presence, sort: "stars", order: "asc" }), method: :post, remote: true
    %li
      = link_to 'DESC', github_search_path(query: { text: params[:query][:text].presence, sort: "stars", order: "desc" }), method: :post, remote: true